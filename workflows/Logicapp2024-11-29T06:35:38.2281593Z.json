{
    "definition": {
        "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
        "actions": {
            "Increment_Number": {
                "inputs": {
                    "variables": {
                        "inputNumber": "@int(triggerBody()['number'])"
                    },
                    "value": {
                        "inputs": {
                            "toIncrement": "@variables('inputNumber')"
                        },
                        "workflow": {
                            "inputs": {
                                "number": "@add(variables('inputNumber'), 1)"
                            }
                        }
                    }
                },
                "runAfter": {},
                "type": "Workflow"
            },
            "Response": {
                "inputs": {
                    "body": {
                        "incrementedNumber": "@outputs('Increment_Number')"
                    },
                    "statusCode": 200
                },
                "runAfter": {
                    "Increment_Number": [
                        "Succeeded"
                    ]
                },
                "type": "Response"
            }
        },
        "triggers": {
            "manual": {
                "inputs": {
                    "schema": {
                        "properties": {
                            "number": {
                                "type": "integer"
                            }
                        },
                        "required": [
                            "number"
                        ],
                        "type": "object"
                    }
                },
                "kind": "HttpRequest",
                "type": "Request"
            }
        }
    },
    "parameters": {}
}